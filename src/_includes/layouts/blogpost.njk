{% extends "layouts/base.njk" %}

{% set currentSection = "blog" %}

{% set image = blogImage | filename %}

{% set metaTitle = title %}
{% set metaDescription = blogIntro %}
{% set metaImage = site.url ~ "/assets/uploads/blogposts/600x600/" ~ image %}

{% block content %}
  <main>
    <div class="l-container">

      <div class="l-container-narrow  u-textalign-center@small  u-margin-bottom-xxl@large">
        <p class="c-meta  u-margin-bottom-xs">
          <time datetime="{{ date | date('YYYY-MM-DD') }}">{{ date|date("MMMM D, Y") }}</time>
        </p>
        <h1 class="c-h1">{{ title }}</h1>
      </div>

      <div class="c-banner">
        <picture>
          <source srcset="/assets/uploads/blogposts/800x450/{{ image }} 800w,
                          /assets/uploads/blogposts/1024x576/{{ image }} 1024w,
                          /assets/uploads/blogposts/1200x675/{{ image }} 1200w," sizes="100vw" media="(min-width: 500px)">
          <img src="/assets/uploads/blogposts/600x600/{{ image }}" class="u-fluidimage" alt="{{ title }}">
        </picture>
      </div>

      <div class="l-container-narrow">
        <div class="c-intro">
          <p>{{ intro }}</p>
        </div>

        {{ content | safe }}
      </div>

    </div>
  </main>
{% endblock %}